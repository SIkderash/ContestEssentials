#include <bits/stdc++.h>
using namespace std;
const int maxn = 1e5 + 17;
int n, m, k;
vector<int> g[maxn];
bool vis[maxn];
void dfs(int v){
	vis[v] = 1;
	for(auto u : g[v])
		if(!vis[u])
			dfs(u);
}
int main(){
	ios::sync_with_stdio(0), cin.tie(0);
	cin >> n >> m ;
	for(int i = 0; i < m; i++){
		int v, u;
		cin >> v >> u;
		v--, u--;
		g[v].push_back(u);
		g[u].push_back(v);
	}
	int cc = 0;
	for(int i = 0; i < n; i++)
		if(!vis[i]){
			cc++;
			dfs(i);
		}

}
